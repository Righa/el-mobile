<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="9dp"
    app:cardCornerRadius="9dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/course_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/course_name"
            android:textColor="@android:color/black"
            android:padding="6dp" />

        <TextView
            android:id="@+id/exam_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exam_name"
            android:layout_below="@id/course_name_view"
            android:padding="6dp"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/exam_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/duration_90min"
            android:padding="3dp"
            android:layout_below="@id/exam_name_view"/>

        <TextView
            android:id="@+id/exam_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/status_open"
            android:padding="3dp"
            android:layout_below="@id/exam_name_view"
            android:layout_toRightOf="@id/exam_duration"
            android:layout_toEndOf="@id/exam_duration" />

        <Button
            android:id="@+id/review_button"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:text="@string/attempt_exam"
            android:textColor="@color/egg_tabs"
            android:background="@drawable/round_buttons"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>