<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/e_learning_wall"
    tools:context=".DashboardActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dash_header"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text="@string/dashboard"
            android:background="@drawable/intellijens_wall"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:padding="11dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <Button
            android:id="@+id/course_button"
            android:text="@string/courses"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:layout_marginTop="24dp"
            android:onClick="openCourses"
            app:layout_constraintRight_toLeftOf="@id/exams_button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dash_header" />

        <Button
            android:id="@+id/exams_button"
            android:text="@string/exams"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:layout_marginTop="24dp"
            android:onClick="openExams"
            app:layout_constraintLeft_toRightOf="@id/course_button"
            app:layout_constraintTop_toBottomOf="@id/dash_header"
            app:layout_constraintRight_toRightOf="parent" />

        <Button
            android:id="@+id/forums_button"
            android:text="@string/forums"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:onClick="openForums"
            app:layout_constraintRight_toLeftOf="@id/assessment_button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/course_button" />

        <Button
            android:id="@+id/assessment_button"
            android:text="@string/assessment"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:onClick="openAssessment"
            app:layout_constraintLeft_toRightOf="@id/forums_button"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/exams_button" />




    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>