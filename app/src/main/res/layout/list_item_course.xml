<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="9dp"
    app:cardCornerRadius="9dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/course_avatar"
            android:layout_width="99dp"
            android:layout_height="99dp"
            android:background="@color/image_back"
            android:contentDescription="@string/image_description" />

        <TextView
            android:id="@+id/course_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/courses"
            android:layout_toRightOf="@id/course_avatar"
            android:padding="6dp"
            android:layout_toEndOf="@id/course_avatar" />

        <TextView
            android:id="@+id/course_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/course_avatar"
            android:padding="6dp"
            android:layout_below="@id/course_name"
            android:layout_toEndOf="@id/course_avatar" />

        <ImageView
            android:id="@+id/teacher_avatar"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_margin="6dp"
            android:background="@color/image_back"
            android:layout_alignBottom="@id/course_avatar"
            android:layout_toRightOf="@id/course_avatar"
            android:layout_toEndOf="@id/course_avatar"
            android:contentDescription="@string/image_description" />

        <TextView
            android:id="@+id/teacher_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:padding="9dp"
            android:layout_alignBottom="@id/course_avatar"
            android:layout_toRightOf="@id/teacher_avatar"
            android:layout_toEndOf="@id/teacher_avatar" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>